<script>
 document.addEventListener("DOMContentLoaded", function() {
  const generateBtn = document.getElementById("generate-btn");
  const generateBtn2 = document.getElementById("generate-btn2");
  const planInfo = document.getElementById("plan-info");
  const planInfo2 = document.getElementById("plan-info2");

  generateBtn.addEventListener("click", function() {
    planInfo.innerHTML = "<p>Loading...</p>";
     getRandomFitnessPlan(); 
  });
  generateBtn2.addEventListener("click", function() {
    planInfo2.innerHTML = "<p>Loading...</p>";
     getFoodsByCalories();  
      
  });
  function shuffle(array) {
    for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
    }
    return array;
}

function getFoodsByCalories() {
    fetch('https://api.spoonacular.com/recipes/1003464/nutritionWidget.json', {
        headers: {
            'X-Api-Key': 'ecab9588851548a3862d8bae2e87b3b2'
        }
    })
        .then(response => response.json())
        .then(data => {
            // Check the structure of the response to access the relevant information
            console.log(data);
            // Access the relevant food data from the response
            const food = data; // Adjust this according to the response structure
            
            // Display the food information
            const foodHTML = `
                <h2>${food.title}</h2>
                <p><strong>Calories:</strong> ${food.calories}</p>
                <p><strong>Description:</strong> ${food.description}</p>
            `;
            planInfo2.innerHTML = foodHTML;
        })
        .catch(error => {
            console.error("Error fetching food data:", error);
            planInfo2.innerHTML = "<p>Error fetching food data. Please try again.</p>";
        });
}


 


  function getRandomFitnessPlan() {
    fetch("https://wger.de/api/v2/exercise/?format=json&language=2") // English language code is 2
      .then(response => response.json())
      .then(data => {
        const randomIndex = Math.floor(Math.random() * data.results.length);
        const randomPlan = data.results[randomIndex];
        console.log(randomPlan)
        const planHTML = `
          <h2>${randomPlan.name}</h2>
          <p><strong>Description:</strong> ${randomPlan.description}</p>
        `;
        planInfo.innerHTML = planHTML;
      })
      .catch(error => {
        console.error("Error fetching fitness plan:", error);
        planInfo.innerHTML = "<p>Error fetching fitness plan. Please try again.</p>";
      });
  }
});



</script>




